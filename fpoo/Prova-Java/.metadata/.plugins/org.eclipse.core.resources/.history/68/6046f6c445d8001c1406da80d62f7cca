package controle;

import java.util.ArrayList;

import modelo.Manutencao;
import uteis.Cripto;

public class ManutencaoProcessa {

	public static ArrayList<Manutencao> manutencoes = new ArrayList<>();
	private static ManutencaoDAO md = new ManutencaoDAO();

	public static void carregar() {
		manutencoes = md.ler();
		if (manutencoes.size() == 0) {
			manutencoes.add(
					new Manutencao(1, "Gato", "Mini", "Angor√°", 2.0f, "03/10/2021", "Mariana Rios", "(19)99587-7878"));
		}
	}

	public static void salvar() {
		md.escrever(manutencoes);
	}

}
